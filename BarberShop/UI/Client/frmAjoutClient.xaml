<Window x:Class="BarberShop.UI.Client.frmAjoutClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarberShop.UI.Client"
        mc:Ignorable="d"
        Title="Ajout d'un client" Height="361" Width="630" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,104,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtNom" HorizontalAlignment="Left" Margin="164,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="256" Grid.Column="1"/>
        <TextBox x:Name="txtPrenom" HorizontalAlignment="Left" Margin="164,95,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="256" Grid.Column="1"/>
        <TextBox x:Name="txtSexe" HorizontalAlignment="Left" Margin="164,155,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="256" Grid.Column="1"/>
        <TextBox x:Name="txtTelephone" HorizontalAlignment="Left" Margin="164,178,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="256" Grid.Column="1"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="164,201,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="256" Grid.Column="1"/>
        <TextBox x:Name="txtAdressePostale" HorizontalAlignment="Left" Margin="164,224,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="256" Grid.Column="1"/>
        <DatePicker x:Name="txtDateNaissance" HorizontalAlignment="Left" Margin="164,122,0,0" VerticalAlignment="Top" Width="256" Grid.Column="1"/>
        <Label Content="Nom * " HorizontalAlignment="Left" Margin="46,61,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Prénom(s) *" HorizontalAlignment="Left" Margin="46,92,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Date de naissance *" HorizontalAlignment="Left" Margin="46,121,0,0" VerticalAlignment="Top" Width="113" Grid.Column="1"/>
        <Label Content="Sexe *" HorizontalAlignment="Left" Margin="46,151,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Téléphone" HorizontalAlignment="Left" Margin="46,174,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="46,197,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Adresse postale " HorizontalAlignment="Left" Margin="46,220,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Button x:Name="btnValider"  Background="#0E680B" Foreground="White" Content="Ajouter" HorizontalAlignment="Left" Margin="338,284,0,0" VerticalAlignment="Top" Width="81" Click="btnValider_Click" Grid.Column="1"/>
        <Button x:Name="btnAnnulerr" Background="DarkRed" Foreground="White" Content="Annuler" HorizontalAlignment="Left" Margin="162,284,0,0" VerticalAlignment="Top" Width="82" Click="btnAnnulerr_Click" Grid.Column="1"/>
        <Label Content="AJOUT D'UN CLIENT"  Background="Black" Foreground="White" FontSize="12" FontWeight="Bold" HorizontalAlignment="Left" Margin="2,18,0,0" VerticalAlignment="Top" Width="138" Grid.Column="1"/>

    </Grid>
</Window>
