        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="331,248,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="256"/>
        <TextBox x:Name="txtAdressePostale" HorizontalAlignment="Left" Margin="331,272,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="256"/>
